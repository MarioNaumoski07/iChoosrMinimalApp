{
  "openapi": "3.0.4",
  "info": {
    "title": "iChoosrApi",
    "version": "1.0"
  },
  "paths": {
    "/payloads": {
      "get": {
        "tags": [
          "iChoosrApi"
        ],
        "description": "Here we retrive space x payloads for all satelites.",
        "operationId": "SpaceXPayloads",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/payloads/{payload_id}": {
      "get": {
        "tags": [
          "iChoosrApi"
        ],
        "description": "Here we retrive one space x payload. Here our most popular and available payloads from satelites: \n FalconSAT-2 , \n Trailblazer, \n PRESat, \n RatSat, \n RazakSAT, \n Dragon Qualification Unit",
        "operationId": "SpaceXPayload",
        "parameters": [
          {
            "name": "payloadName",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "get": {
        "tags": [
          "iChoosrApi"
        ],
        "description": "Please after you login, copy the bearer token and past in swagger popup when you click on authorization button so you will be able to execute api endpoints.",
        "operationId": "Login users",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Status"
        ],
        "summary": "Hello World iChoosr.",
        "description": "This is root of the endpoint and after this will be other endpoint that we will work with.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Enter JWT token after you log in",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}